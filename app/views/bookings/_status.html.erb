<div class="d-flex gap-2">
  <% if current_user == booking.service.user && booking.status == 'pending' %>
    <%= simple_form_for booking do |f| %>
      <%= f.input :status, as: :hidden, input_html: { value: 'approved'} %>
      <%= f.submit 'Accept', class: 'btn btn-primary me-2 status-button' %>
    <% end %>
    <%= simple_form_for booking do |f| %>
      <%= f.input :status, as: :hidden, input_html: { value: 'rejected'} %>
      <%= f.submit 'Reject', class: 'btn btn-secondary me-2 status-button' %>
    <% end %>
  <% else %>
    <p class='booking-tag booking-tag-<%= booking.status %>'><%= booking.status %></p>
  <% end %>
</div>
