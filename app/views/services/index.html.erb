<div class="service-index text-center mt-2">
  <h1>Services</h1>
</div>
<div class="d-flex justify-content-center search-box">
  <div class="col-lg-8">
    <%= form_with url: services_path, method: :get, class: "d-flex justify-content-center py-3" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control w-50 input-field",
            placeholder: "Type a keyword"
        %>
      <div class="d-flex justify-content-between px-3 gap-3">
        <%= submit_tag "Search", name: "", class: "button-regular" %>
        <%= link_to "Show All", services_path, class: "button-light" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "card" %>
