<h1 class="text-center">Your Bookmarked Services</h1>
<div class="info-box">
  <div class="card-container">
    <% @bookmarks.each do |bookmark| %>
      <div class="card-product card-shadow">
        <div class="card-product-image">
          <%= cl_image_tag(bookmark.service.photo.key, class: "card-product-image") %>
        </div>
        <div class="card-product-infos">
          <h2>
            <%= link_to(bookmark.service.title, service_path(bookmark.service), class: "truncate btn btn-link fs-4 text-decoration-none") %>
          </h2>
        </div>
        <div class="bookmark-reminder">
          <p><%= bookmark.service.user.username %></p>
          <p><%= bookmark.service.user.email %></p>
          <p><%= bookmark.service.user.phonenumber %></p>
        </div>
        <div class="card-image-price">
          <p>Â¥ <%= bookmark.service.price %></p>
        </div>
        <div style="margin-left: auto; padding: 16px;">
          <%= simple_form_for bookmark, method: :delete do |f| %>
            <%= f.submit 'Remove', class: 'btn button-regular' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-end">
    <%= link_to 'Go back to Services', services_path, class: 'btn btn-secondary mt-3 ' %>
  </div>
</div>
